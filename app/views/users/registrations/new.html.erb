<! DOCTYPE html>
<html lang="zh-CN">
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </head>
  <body class="signup">

  <div class="container">
  <div class="row">
  <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
  <div class="signupform">
<h1 class="signuptitle">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
  <%= f.label :username %>
  
  <%= f.text_field :username, autofocus: true,class:"form-control" %></div>

<div class="form-group">

<%= f.label :email %>

  <%= f.email_field :email, autofocus: true, class:"form-control" %></div>

  <div class="form-group"><%= f.label :password %>
  
    <%= f.password_field :password, autocomplete: "off",class:"form-control" %></div>

  <div class="form-group"><%= f.label :password_confirmation %>
  
    <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control" %></div>


  <div class="signupbutton"><%= f.submit "Sign up",class:"btn btn-primary" %></div>
  <div class="signinlink">Already have a account?<%= render "users/shared/links" %></div>
 
<% end %>

</div>
</div>
</div>
</div>
</body>
</html>
