<! DOCTYPE html>
<html lang="zh-CN">
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  </head>

<body class="login-form">
<div class="container">
<div class="row">
<div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
<div class="form-border">

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:"form-horizontal"}) do |f| %>
<h1 class="login">Login</h1>
<% flash.each do |name, msg| %>
      <p class="loginerrormessage"><%= msg %></p>
    <% end %>
  <div class="form-group">
  <%= f.label :email, class:"col-sm-3 col-md-3 control-label" %>
  <div class="col-sm-6 col-md-6">
  <%= f.email_field :email, autofocus: true ,class:"form-control" %>
  </div>
  </div>

  <div class="form-group">
  <%= f.label :password , class:"col-sm-3 col-md-3 control-label" %>
  <div class="col-sm-6 col-md-6">
    <%= f.password_field :password, class:"form-control",autocomplete: "off" %>
    </div>
    </div>

  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-3 col-sm-6"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<div class="col-sm-offset-3 col-sm-8">
<div class="signinbutton">
<%= f.submit "Sign in",class:"btn btn-primary btn-lg" %></div>
<div class="signinlink">
<%= render "devise/shared/links" %></div>
</div>
<% end %>

</div>
</div>
</div>
</div>


</body>
</html>